{
    "experiment_name": "simple_recommender",
    "model": {
        "type": "catboost",
        "config": {
            "catboost": {
                "iterations": 500,
                "learning_rate": 0.1,
                "depth": 6,
                "verbose": 100,
                "l2_leaf_reg": 3.0,
                "loss_function": "Logloss",
                "eval_metric": "AUC",
                "early_stopping_rounds": 50
            }
        }
    },
    "features": [
        "count_purchase_user_product",
        "ctr_product",
        "user_stats",
        "product_stats",
        "store_stats",
        "recency_user_store",
        "product_embeddings",
        "count_purchase_user_product",
        "count_purchase_user_store",
        "ctr_product",
        "recency_user_product",
        "user_stats",
        "product_stats",
        "store_stats",
        "city_stats"
    ],
    "target": "CartUpdate_Purchase_vs_View",
    "data": {
        "train_path": "data/train.parquet",
        "test_path": "data/test.parquet",
        "sample_size": null
    },
    "output": {
        "results_dir": "results",
        "save_model": true,
        "save_predictions": true
    },
    "text_processing": {
        "model_type": "sentence-transformers",
        "model_name": "all-MiniLM-L6-v2",
        "embedding_dimensions": 20
    },
    "history_cleaning": {
        "remove_lurkers": true
    },
    "logging": {
        "level": "INFO",
        "file": "lavka_recsys.log"
    },
    "preprocessing": {
        "normalize_timestamps": true
    }
}